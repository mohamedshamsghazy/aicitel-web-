{
    "kind": "collectionType",
    "collectionName": "applications",
    "info": {
        "singularName": "application",
        "pluralName": "applications",
        "displayName": "Application",
        "description": "Job applications"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "fullName": {
            "type": "string",
            "required": true
        },
        "email": {
            "type": "email",
            "required": true
        },
        "phone": {
            "type": "string"
        },
        "cv": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "files"
            ]
        },
        "linkedJob": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::job.job",
            "inversedBy": "applications"
        },
        "stage": {
            "type": "enumeration",
            "enum": [
                "New",
                "Reviewed",
                "Interview",
                "Rejected",
                "Hired"
            ],
            "default": "New"
        },
        "internalNotes": {
            "type": "blocks"
        }
    }
}